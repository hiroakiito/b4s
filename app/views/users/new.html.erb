<% provide(:title, '新規登録') %>
<div class="media-left">
<h1>新規登録</h1>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "パスワード確認" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "登録", class: "btn btn-default" %>
    <% end %>
    </div>
  </div>
</div>